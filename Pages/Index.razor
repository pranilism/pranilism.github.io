@page "/"
@page "/index"
@inject IJSRuntime jsRuntime

<NavMenu />

<About />

<Resume />

<Services />

<Portfolio />

<Contact />

<div class="credits">
    Designed by <a href="javascript:void(0)">Pranil Tunga</a>
