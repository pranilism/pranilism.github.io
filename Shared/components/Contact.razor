<!-- ======= Contact Section ======= -->
@using praniltunga.Models
@inject HttpClient _client

<section id="contact" class="contact">
    <div class="container">

        <div class="section-title">
            <h2>Contact</h2>
            <p>Contact Me</p>
        </div>

        <div class="row mt-2">

            <div class="col-md-6 d-flex align-items-stretch">
                <div class="info-box">
                    <i class="bx bx-map"></i>
                    <h3>My Address</h3>
                    <p>Solapur, MH, India 413001</p>
                </div>
            </div>

            <div class="col-md-6 mt-4 mt-md-0 d-flex align-items-stretch">
                <div class="info-box">
                    <i class="bx bx-share-alt"></i>
                    <h3>Social Profiles</h3>
                    <div class="social-links">
                        <a href="https://twitter.com/pranilism" class="twitter"><i class="icofont-twitter"></i></a>
                        <a href="https://www.facebook.com/pranilism" class="facebook"><i class="icofont-facebook"></i></a>
                        <a href="https://www.instagram.com/pranilism/" class="instagram"><i class="icofont-instagram"></i></a>
                        <a href="https://github.com/pranilism" class="google-plus"><i class="icofont-github"></i></a>
                        <a href="https://www.linkedin.com/in/pranil-tunga-b99456135" class="linkedin"><i class="icofont-linkedin"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mt-4 d-flex align-items-stretch">
                <div class="info-box">
                    <i class="bx bx-envelope"></i>
                    <h3>Email Me</h3>
                    <p>praniltunga@gmail.com</p>
                </div>
            </div>
            <div class="col-md-6 mt-4 d-flex align-items-stretch">
                <div class="info-box">
                    <i class="bx bx-phone-call"></i>
                    <h3>Call Me</h3>
                    <p>+91 77 44 923 184</p>
                </div>
            </div>
        </div>

        <EditForm role="form" Model="contact" OnSubmit="SubmitForm" class="php-email-form mt-4">
            <div class="form-row">
                <div class="col-md-6 form-group">
                    <InputText type="text" @bind-Value="contact.Name" class="form-control" id="name" placeholder="Your Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                    <div class="validate"></div>
                </div>
                <div class="col-md-6 form-group">
                    <InputText type="email" @bind-Value="contact.Email" class="form-control" id="email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email" />
                    <div class="validate"></div>
                </div>
            </div>
            <div class="form-group">
                <InputText type="text" @bind-Value="contact.Subject" class="form-control" id="subject" placeholder="Subject" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" />
                <div class="validate"></div>
            </div>
            <div class="form-group">
                <InputTextArea class="form-control" @bind-Value="contact.Message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></InputTextArea>
                <div class="validate"></div>
            </div>
            <div class="mb-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message" @onclick="ToggleFlag" style="display:@(IsSaved ? "block" : "none");cursor:pointer;">
                    Your message has been sent. Thank you!
                </div>
                <div class="sent-message" @onclick="ToggleErrorFlag" style="display:@(IsError ? "block" : "none");cursor:pointer;">
                    Something went wrong. Please try again!
                </div>
                <div class="sent-message" @onclick="ToggleValidationErrorFlag" style="display:@(IsValidationError ? "block" : "none");cursor:pointer;">
                    Validations failed. Please enter all values!
                </div>
            </div>
            <div class="text-center">
                <button type="submit">Send Message</button>
            </div>
        </EditForm>

    </div>
</section><!-- End Contact Section -->
@code {
    public contacts contact { get; set; } = new contacts();

    public bool IsSaved = false;
    public bool IsError = false;
    public bool IsValidationError = false;

    public async Task SubmitForm()
    {
        if (ValidateForm())
        {
            IsValidationError = false;
            contact.id = Guid.NewGuid().ToString();
            var response = await _client.PostAsJsonAsync<contacts>("/", contact);
            if (response.IsSuccessStatusCode)
            {
                IsSaved = true;
                IsError = false;
            }
            else
            {
                IsSaved = false;
                IsError = true;
            }
        }
        else
        {
            IsSaved = false;
            IsError = false;
            IsValidationError = true;
        }
    }

    public bool ValidateForm()
    {
        return (!string.IsNullOrEmpty(contact.Name) &&
        !string.IsNullOrEmpty(contact.Email) &&
        !string.IsNullOrEmpty(contact.Subject) &&
        !string.IsNullOrEmpty(contact.Message));
    }

    public void ToggleFlag(EventArgs args)
    {
        IsSaved = !IsSaved;
    }

    public void ToggleErrorFlag(EventArgs args)
    {
        IsError = !IsError;
    }

    public void ToggleValidationErrorFlag(EventArgs args)
    {
        IsValidationError = !IsValidationError;
    }
}